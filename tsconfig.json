{
  "include": ["./src/**/*"],
  "files": [
	"node_modules/vite-plugin-pwa/client.d.ts"
  ],
  "compileOnSave": true,
  "compilerOptions": {
	"baseUrl": "./",
	"outDir": "./dist",
	"sourceMap": true,
	"strict": true,
	"noImplicitAny": false,
	"module": "ESNext",
	"lib": [
	  "ESNext",
	  "dom"
	],
	"target": "ES6",
	"moduleResolution": "Node",
	"experimentalDecorators": true,
	"noEmitOnError": true,
	"resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}